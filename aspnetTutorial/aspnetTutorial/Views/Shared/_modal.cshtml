
<div class="modal-bg">
    <div class="modal-box">
        <h4 class="close-modal">X</h4>
        <div class="top-modal">
            <div class="left-top-modal">
                <img  id="review_image" src="" alt="">
            </div>
            <div class="right-top-modal">
                <div class="name-description">
                    <h1 id="dish_name"></h1>
                    <p id="dish_description">
                    </p>
                </div>
                <div class="rating-item-number">
                    <span id="real_rate"></span>
                </div>
                <div class="stars-text">
                    <ul id="dish_stars">
                       
                    </ul>
                    <span id="number_reviews"></span>
                </div>
            </div>

        </div>
        <div class="button-write-review">
            <button id="give_review_aux">Escribe tu reseña</button>
        </div>
        <div class="bottom-modal">
            <div class="reviews-box">



            </div>
            <form method="post" class="send-review-box">
                <div class="stars-container">
                    <span>Calificación:</span>
                    <input type="radio" name="rating" id="rate-1" value="1">
                    <label name="rating" id="rate-1" class="fas fa-star"></label>
                    <input name="rating" type="radio" id="rate-2" value="2">
                    <label name="rating" for="rate-2" id="rate-2" class="fas fa-star"></label>
                    <input type="radio" name="rating" id="rate-3" value="3">
                    <label for="rate-3" id="rate-3" class="fas fa-star"></label>
                    <input type="radio" name="rating" id="rate-4" value="4">
                    <label for="rate-4" id="rate-4" class="fas fa-star"></label>
                    <input name="rating" type="radio" id="rate-5" value="5">
                    <label for="rate-5" name="rating" id="rate-5" class="fas fa-star"></label>
                </div>

                <textarea id="review_text" name="review" cols="10" rows="5" placeholder="Escribe aquí"></textarea>
                <div class="confirm-button-con">
                    <button id="send_review_button" type="button" class="confirm-review">Confirmar</button>
                </div>
            </form>
        </div>
    </div>
    <div class="close-modal device">
        <h2>
            Close
        </h2>
    </div>
</div>