@model BookModel
@section Style{
    @*<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">*@
    <link href="~/Stylesheets/introjs.css" rel="stylesheet" />
    <link href="~/introJSThemes/introjs-royal.css" rel="sktylesheet" />
    <link href="~/jquery-timepicker/jquery.timepicker.min.css" rel="stylesheet" />
    <link href="~/Stylesheets/jquery-ui.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link href="/Stylesheets/book.css" rel="stylesheet" />
}

@{
    int success = ViewBag.toggleError ?? 0;
}
<div class="modal-bg">

</div>
<main>


    <div class="book-header">

        <h1>
            Selecciona el dia y la hora para tu reservación

        </h1>

    </div>
    <div class="error-book">
        <h1><i class="fas fa-exclamation-circle"></i> Ya tienes una reservación en proceso</h1>
        <h2 class="close-error-book">X</h2>
    </div>

    <div class="success-book">
        <h1>Tu reservación está siendo procesada <i class="fas fa-check"></i></h1>
        <h2 class="close-error-book">X</h2>
    </div>


    <div class="book-content">
        <form asp-action="MakeReservation" asp-controller="Book">
            <section class="input-section-book" data-step="1" data-intro="Selecciona tu fecha en la que quieres tu reserva" data-position="down">
                <h1>Dia</h1>
                <div class="input-form">
                    <input id="date" asp-for="DateDay">
                    <label id="book_date" for="date" class="fas fa-calendar-alt"></label>
                </div>
            </section>

            <section class="input-section-hour" data-step="2" data-intro="Selecciona la hora en la que quieres asistir" data-position="down">

                <h1>Hora</h1>
                <div class="hours-container">
                    <input type="radio" name="DateHour" id="hora" value="7:00:00">
                    <label for="hora-1" id="hora">7:00 <i class="fas fa-clock"></i></label>
                    <input type="radio" name="DateHour" value="7:30:00" id="hora-2">
                    <label for="hora-2" id="hora">7:30 <i class="fas fa-clock"></i></label>
                    <input type="radio" name="DateHour" value="8:00:00" id="hora-3">
                    <label for="hora-3" id="hora">8:00 <i class="fas fa-clock"></i></label>
                    <input type="radio" name="DateHour" id="hora-4" value="8:30:00">
                    <label for="hora-4" id="hora">8:30 <i class="fas fa-clock"></i></label>

                </div>

            </section>
            <section class="input-section-persons" data-step="3" data-intro="Selecciona el numero de personas que irán contigo" data-position="down">
                <h1>Personas</h1>
                <div class="number-persons-container">
                    <i class="fas fa-smile"></i>
                    <input type="number" asp-for="People" id="persons_book">
                    <button type="button" id="minus_one">-</button>
                    <button type="button" id="plus_one">+</button>

                </div>
            </section>
            <section class="button-book">

                <section data-step="4" data-intro="Recuerda aceptar los terminos y condiciones para poder reservar" data-position="down">
                    <input type="checkbox" asp-for="Terms" id="terms">
                    <label for="terms">He leido y acepto los terminos de Politica y Privacidad</label> <br>
                    <span asp-validation-for="Terms"></span>
                </section>

                <button data-step="5" data-intro="¡Listo! Disfruta tu visita en Nikkei" data-position="down" type="submit">Reservar</button>

            </section>
        </form>
    </div>

</main>

@section scripts{
    @*<script src="https://code.jquery.com/jquery-1.12.4.js"></script>*@
    @* <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>*@

    @if (ViewBag.ShowOnboarding != null)
    {

   
    @if (ViewBag.ShowOnboarding)
    {
        <script src="~/Scripts/intro.js"></script>
        <script src="~/Scripts/onboarding.js"></script>
    }
    }
    <script src="~/jquery-datepicker/jquery-datepicker.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/datepicker.js"></script>
    <script src="~/Scripts/book.js"></script>


    @if (success == 2)
    {
        <script>
            toggleError(2);

        </script>
    }
    @if (success == 1)
    {
        <script>
            toggleError(1);

        </script>
    }

}


